    <script src="https://cdn.jsdelivr.net/npm/web3@4.16.0/dist/web3.min.js"></script>
    <script>
      const walletButton = document.getElementById("navWalletButton");
      const STORAGE_KEY = "chainevent_wallet";
      let connectedAccount = localStorage.getItem(STORAGE_KEY);
      let contractConfig = null;
      let membershipConfig = null;

      const shortenAddress = (address) => {
        if (!address) return "";
        return `${address.slice(0, 6)}...${address.slice(-4)}`;
      };

      const setWalletLabel = (button, label) => {
        if (!button) return;
        const labelEl = button.querySelector(".wallet-label");
        if (labelEl) {
          labelEl.textContent = label;
        } else {
          button.textContent = label;
        }
      };

      const setButtonState = () => {
        if (!walletButton) return;
        setWalletLabel(
          walletButton,
          connectedAccount ? `Disconnect ${shortenAddress(connectedAccount)}` : "Connect Wallet"
        );
      };

      const connectWallet = async () => {
        if (!window.ethereum) {
          alert("MetaMask not detected. Please install MetaMask to continue.");
          return;
        }
        try {
          try {
            await window.ethereum.request({
              method: "wallet_requestPermissions",
              params: [{ eth_accounts: {} }],
            });
          } catch (permError) {
            if (permError && permError.code === 4001) {
              return;
            }
          }
          const accounts = await window.ethereum.request({
            method: "eth_requestAccounts",
          });
          connectedAccount = accounts[0] || null;
          if (connectedAccount) {
            localStorage.setItem(STORAGE_KEY, connectedAccount);
          } else {
            localStorage.removeItem(STORAGE_KEY);
          }
          setButtonState();
          if (window.updateAdminLink) {
            window.updateAdminLink();
          }
        } catch (error) {
          console.error("Wallet connection failed:", error);
        }
      };

      const disconnectWallet = () => {
        connectedAccount = null;
        localStorage.removeItem(STORAGE_KEY);
        setButtonState();
        if (window.updateAdminLink) {
          window.updateAdminLink();
        }
      };

      const syncWallet = async () => {
        if (!window.ethereum) return;
        try {
          const accounts = await window.ethereum.request({ method: "eth_accounts" });
          connectedAccount = accounts[0] || null;
          if (connectedAccount) {
            localStorage.setItem(STORAGE_KEY, connectedAccount);
          } else {
            localStorage.removeItem(STORAGE_KEY);
          }
          setButtonState();
          if (window.updateAdminLink) {
            window.updateAdminLink();
          }
        } catch (error) {
          console.error("Wallet sync failed:", error);
        }
      };

      if (walletButton) {
        walletButton.addEventListener("click", () => {
          if (connectedAccount) {
            disconnectWallet();
          } else {
            connectWallet();
          }
        });
      }

      if (window.ethereum) {
        window.ethereum.on("accountsChanged", (accounts) => {
          connectedAccount = accounts[0] || null;
          if (connectedAccount) {
            localStorage.setItem(STORAGE_KEY, connectedAccount);
          } else {
            localStorage.removeItem(STORAGE_KEY);
          }
          setButtonState();
          if (window.updateAdminLink) {
            window.updateAdminLink();
          }
        });
      }

      const fetchContractConfig = async () => {
        if (contractConfig) return contractConfig;
        const response = await fetch("/api/contract-config", { cache: "no-store" });
        if (!response.ok) {
          throw new Error("Failed to load contract config");
        }
        contractConfig = await response.json();
        return contractConfig;
      };

      const fetchMembershipConfig = async () => {
        if (membershipConfig) return membershipConfig;
        const response = await fetch("/api/membership-config", { cache: "no-store" });
        if (!response.ok) {
          throw new Error("Failed to load membership config");
        }
        membershipConfig = await response.json();
        return membershipConfig;
      };

      const getContract = async () => {
        if (!window.Web3) {
          throw new Error("Web3 not available");
        }
        const config = await fetchContractConfig();
        if (!config || !config.address || !config.abi) {
          throw new Error("Contract not configured");
        }
        const web3 = new window.Web3(window.ethereum);
        return new web3.eth.Contract(config.abi, config.address);
      };

      const getMembershipContract = async () => {
        if (!window.Web3) {
          throw new Error("Web3 not available");
        }
        const config = await fetchMembershipConfig();
        if (!config || !config.address || !config.abi) {
          throw new Error("Membership contract not configured");
        }
        const web3 = new window.Web3(window.ethereum);
        return new web3.eth.Contract(config.abi, config.address);
      };

      const formatDate = (dateString) => {
        const date = new Date(dateString);
        if (Number.isNaN(date.getTime())) return dateString;
        return date.toLocaleDateString("en-US", {
          month: "long",
          day: "numeric",
          year: "numeric",
        });
      };

      const formatEth = (value) => {
        const num = Number(value || 0);
        return `${num.toFixed(2)} ETH`;
      };

      const renderEventsOverview = (items) => {
        const container = document.getElementById("eventsOverview");
        if (!container) return;
        if (!items.length) {
          container.innerHTML = "<div class=\"activity-meta\">No events yet.</div>";
          return;
        }
        container.innerHTML = items
          .map((event) => {
            const total = Number(event.totalTickets || 0);
            const remaining = Number(event.remainingTickets || 0);
            const sold = Math.max(total - remaining, 0);
            const percent = total ? Math.round((sold / total) * 100) : 0;
            return `
              <div class="event-row">
                <div class="event-title">
                  <span>${event.name || "Event"}</span>
                  <span class="pill">${event.category || "Event"}</span>
                </div>
                <div class="event-meta">
                  <span>${formatDate(event.date)}</span>
                  <span>${percent}%</span>
                </div>
                <div class="event-meta">
                  <span>${sold} / ${total} sold</span>
                </div>
                <div class="progress"><span style="width:${percent}%;"></span></div>
              </div>
            `;
          })
          .join("");
      };

      const renderActivity = (items) => {
        const container = document.getElementById("activityFeed");
        if (!container) return;
        if (!items.length) {
          container.innerHTML = "<div class=\"activity-meta\">No blockchain activity yet.</div>";
          return;
        }
        container.innerHTML = items
          .map((item) => {
            return `
              <div class="activity-item">
                <div class="activity-icon">${item.icon}</div>
                <div>
                  <div><strong>${item.title}</strong></div>
                  <div class="activity-meta">${item.subtitle}</div>
                </div>
                <span class="pill">${item.count}</span>
              </div>
            `;
          })
          .join("");
      };

      const loadDashboardStats = async () => {
        try {
          const response = await fetch("/data/events.json", { cache: "no-store" });
          const events = await response.json();
          const contract = await getContract();
          const enriched = await Promise.all(
            events.map(async (event) => {
              let remaining = Number(event.ticketsAvailable || 0);
              if (event.onChainId) {
                try {
                  const chainEvent = await contract.methods.getEvent(event.onChainId).call();
                  remaining = Number(chainEvent.ticketsAvailable || remaining);
                } catch (error) {
                  console.warn("Failed to fetch on-chain event", event.onChainId, error);
                }
              }
              return {
                ...event,
                totalTickets: Number(event.ticketsAvailable || 0),
                remainingTickets: remaining,
              };
            })
          );

          const totals = enriched.reduce(
            (acc, event) => {
              const total = Number(event.totalTickets || 0);
              const remaining = Number(event.remainingTickets || 0);
              const sold = Math.max(total - remaining, 0);
              acc.tickets += sold;
              acc.revenue += sold * Number(event.price || 0);
              return acc;
            },
            { tickets: 0, revenue: 0 }
          );

          const totalEventsEl = document.getElementById("statTotalEvents");
          const ticketsEl = document.getElementById("statTicketsMinted");
          const revenueEl = document.getElementById("statRevenue");
          const bronzeEl = document.getElementById("statBronzeMembers");
          const silverEl = document.getElementById("statSilverMembers");
          const goldEl = document.getElementById("statGoldMembers");
          if (totalEventsEl) totalEventsEl.textContent = enriched.length;
          if (ticketsEl) ticketsEl.textContent = totals.tickets;
          if (revenueEl) revenueEl.textContent = formatEth(totals.revenue);
          if (bronzeEl) bronzeEl.textContent = "0";
          if (silverEl) silverEl.textContent = "0";
          if (goldEl) goldEl.textContent = "0";

          renderEventsOverview(enriched);

          const recentActivity = enriched.slice(0, 4).map((event) => ({
            icon: "üéüÔ∏è",
            title: "Ticket Sales",
            subtitle: `${event.name || "Event"} ¬∑ ${formatDate(event.date)}`,
            count: `${Math.max(
              Number(event.totalTickets || 0) - Number(event.remainingTickets || 0),
              0
            )}x`,
          }));
          let membershipActivity = [];

          if (bronzeEl || silverEl || goldEl || revenueEl) {
            try {
              const membershipContract = await getMembershipContract();
              const purchaseEvents = await membershipContract.getPastEvents("MembershipPurchased", {
                fromBlock: 0,
                toBlock: "latest",
              });
              const unique = new Map();
              let membershipRevenue = 0;
              purchaseEvents.forEach((evt) => {
                const buyer = (evt.returnValues?.buyer || "").toLowerCase();
                const tier = Number(evt.returnValues?.tier || 0);
                const priceWei = evt.returnValues?.price || "0";
                if (buyer) {
                  const current = unique.get(buyer) || 0;
                  if (tier > current) {
                    unique.set(buyer, tier);
                  }
                }
                membershipRevenue += Number(window.Web3.utils.fromWei(priceWei, "ether"));
              });
              if (bronzeEl || silverEl || goldEl) {
                let bronzeCount = 0;
                let silverCount = 0;
                let goldCount = 0;
                unique.forEach((tier) => {
                  if (tier === 1) bronzeCount += 1;
                  if (tier === 2) silverCount += 1;
                  if (tier === 3) goldCount += 1;
                });
                if (bronzeEl) bronzeEl.textContent = String(bronzeCount);
                if (silverEl) silverEl.textContent = String(silverCount);
                if (goldEl) goldEl.textContent = String(goldCount);
              }
              if (revenueEl) {
                revenueEl.textContent = formatEth(totals.revenue + membershipRevenue);
              }
              membershipActivity = purchaseEvents
                .slice(-4)
                .reverse()
                .map((evt) => ({
                  icon: "üëë",
                  title: "Membership Purchased",
                  subtitle: `Tier ${evt.returnValues?.tier || ""} ¬∑ ${shortenAddress(
                    evt.returnValues?.buyer || ""
                  )}`,
                  count: "1x",
                }));
            } catch (error) {
              console.warn("Failed to load memberships:", error);
              if (bronzeEl) bronzeEl.textContent = "0";
              if (silverEl) silverEl.textContent = "0";
              if (goldEl) goldEl.textContent = "0";
            }
          }
          renderActivity([...membershipActivity, ...recentActivity].slice(0, 6));
        } catch (error) {
          console.error("Failed to load dashboard stats:", error);
          renderEventsOverview([]);
          renderActivity([]);
        }
      };

      setButtonState();
      if (window.updateAdminLink) {
        window.updateAdminLink();
      }
      syncWallet();
      if (window.location.search) {
        window.history.replaceState({}, "", "/dashboard");
      }
      loadDashboardStats();
    </script>
