        justify-content: space-between;
        align-items: center;
        font-size: 12px;
        color: var(--muted);
      }

      .event-title {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 10px;
        font-size: 14px;
        font-weight: 600;
      }

      .progress {
        height: 8px;
        border-radius: 999px;
        background: #e5e7eb;
        overflow: hidden;
      }

      .progress span {
        display: block;
        height: 100%;
        background: var(--primary);
      }

      .activity-item {
        display: grid;
        grid-template-columns: 28px 1fr auto;
        align-items: center;
        gap: 10px;
