<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ChainEvent - About Us</title>
    <style>
      :root {
        --ink: #101526;
        --muted: #5e6477;
        --bg: #f7f8fb;
        --card: #ffffff;
        --primary: #2f5bff;
        --primary-strong: #2147d7;
        --hero-1: #3a5bff;
        --hero-2: #6b47f5;
        --hero-3: #9737e6;
        --line: #e6e9f2;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: "Space Grotesk", "Segoe UI", "Trebuchet MS", sans-serif;
        color: var(--ink);
        background: var(--bg);
      }

      a {
        text-decoration: none;
        color: inherit;
      }

      .container {
        width: min(1120px, 92vw);
        margin: 0 auto;
      }

      .nav {
        background: #ffffff;
        border-bottom: 1px solid #eef0f6;
      }

      .nav-inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 18px 0;
        gap: 20px;
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 700;
      }

      .brand-mark {
        width: 28px;
        height: 28px;
        border-radius: 10px;
        border: 2px solid #2f5bff;
        display: grid;
        place-items: center;
        font-size: 14px;
        color: #2f5bff;
      }

      .nav-links {
        display: flex;
        gap: 22px;
        font-size: 14px;
        color: #525b70;
        align-items: center;
      }

      .nav-links a.active {
        color: var(--primary);
        font-weight: 600;
      }

      .btn {
        background: var(--primary);
        color: #ffffff;
        padding: 10px 18px;
        border-radius: 999px;
        font-size: 14px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 12px 24px rgba(47, 91, 255, 0.2);
        border: none;
        cursor: pointer;
      }

      .hero {
        background: linear-gradient(120deg, var(--hero-1), var(--hero-2), var(--hero-3));
        color: #ffffff;
        padding: 70px 0 90px;
        position: relative;
        overflow: hidden;
        text-align: center;
      }

      .hero::after {
        content: "";
        position: absolute;
        width: 420px;
        height: 420px;
        background: rgba(255, 255, 255, 0.12);
        border-radius: 50%;
        top: -160px;
        right: -120px;
      }

      .hero h1 {
        margin: 0 0 12px;
        font-size: clamp(32px, 4.6vw, 48px);
      }

      .hero p {
        margin: 0 auto;
        max-width: 640px;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.9);
      }

      .section {
        padding: 70px 0;
      }

      .section h2 {
        margin: 0 0 12px;
        text-align: center;
        font-size: clamp(22px, 3vw, 30px);
      }

      .section p.lead {
        text-align: center;
        color: var(--muted);
        max-width: 640px;
        margin: 0 auto 36px;
      }

      .mission-card {
        background: var(--card);
        border-radius: 18px;
        padding: 26px;
        border: 1px solid var(--line);
        text-align: center;
        max-width: 760px;
        margin: 0 auto 36px;
      }

      .pill-grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 16px;
      }

      .pill-card {
        background: var(--card);
        border-radius: 16px;
        padding: 22px;
        border: 1px solid var(--line);
        text-align: center;
        display: grid;
        gap: 12px;
      }

      .pill-icon {
        width: 40px;
        height: 40px;
        border-radius: 12px;
        margin: 0 auto;
        display: grid;
        place-items: center;
        font-weight: 700;
        color: #2f5bff;
        background: #eef2ff;
      }

      .steps {
        display: grid;
        grid-template-columns: repeat(4, minmax(0, 1fr));
        gap: 18px;
        text-align: center;
      }

      .step-card {
        background: var(--card);
        border-radius: 16px;
        padding: 22px;
        border: 1px solid var(--line);
      }

      .step-circle {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        margin: 0 auto 12px;
        display: grid;
        place-items: center;
        font-weight: 700;
        color: #2f5bff;
        background: #eef2ff;
      }

      .benefits-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 18px;
      }

      .benefit {
        background: var(--card);
        border-radius: 16px;
        padding: 22px;
        border: 1px solid var(--line);
        display: grid;
        gap: 8px;
      }

      .benefit h4 {
        margin: 0;
      }

      .stats {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 22px;
        text-align: center;
      }

      .stat {
        background: var(--card);
        border-radius: 18px;
        padding: 22px;
        border: 1px solid var(--line);
      }

      .stat strong {
        font-size: 26px;
        display: block;
        margin-bottom: 6px;
        color: var(--primary);
      }

      .cta {
        background: #ffffff;
        border-top: 1px solid var(--line);
        border-bottom: 1px solid var(--line);
        text-align: center;
        padding: 60px 0;
      }

      .cta-actions {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        gap: 12px;
        flex-wrap: wrap;
      }

      .btn-light {
        background: #eef2ff;
        color: #2f5bff;
      }

      .footer {
        background: #ffffff;
        padding: 50px 0 30px;
      }

      .footer-grid {
        display: grid;
        grid-template-columns: 1.2fr 1fr 1fr 1fr;
        gap: 24px;
        margin-bottom: 32px;
      }

      .footer h5 {
        margin: 0 0 10px;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #6b7280;
      }

      .footer a,
      .footer p {
        font-size: 13px;
        color: #6b7280;
      }

      .footer-links {
        display: grid;
        gap: 8px;
      }

      .footer-bottom {
        border-top: 1px solid var(--line);
        padding-top: 16px;
        text-align: center;
        font-size: 12px;
        color: #94a3b8;
      }

      @media (max-width: 960px) {
        .nav-inner {
          flex-direction: column;
          align-items: flex-start;
        }

        .pill-grid,
        .steps,
        .benefits-grid,
        .stats,
        .footer-grid {
          grid-template-columns: repeat(2, minmax(0, 1fr));
        }
      }

      @media (max-width: 720px) {
        .nav-links {
          flex-wrap: wrap;
          row-gap: 10px;
        }

        .pill-grid,
        .steps,
        .benefits-grid,
        .stats,
        .footer-grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <%- include('partials/header', { activePage: 'about-us' }) %>

    <section class="hero">
      <div class="container">
        <h1>About ChainEvent</h1>
        <p>
          Revolutionizing event ticketing through blockchain technology and NFT
          innovation.
        </p>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <h2>Our Mission</h2>
        <p class="lead">
          ChainEvent is committed to eliminating ticket fraud, empowering event
          organizers, and creating a transparent, secure ticketing ecosystem.
        </p>
        <div class="pill-grid">
          <div class="pill-card">
            <div class="pill-icon">TS</div>
            <h4>Trust &amp; Security</h4>
            <p>Blockchain verification ensures every ticket is authentic and traceable.</p>
          </div>
          <div class="pill-card">
            <div class="pill-icon">CF</div>
            <h4>Community First</h4>
            <p>NFT memberships reward loyal fans with exclusive benefits.</p>
          </div>
          <div class="pill-card">
            <div class="pill-icon">GA</div>
            <h4>Global Access</h4>
            <p>Borderless ticketing powered by decentralized infrastructure.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="section" style="background: #ffffff;">
      <div class="container">
        <h2>How ChainEvent Works</h2>
        <p class="lead">
          Our platform leverages smart contracts and NFT technology to deliver a
          seamless, secure event experience.
        </p>
        <div class="steps">
          <div class="step-card">
            <div class="step-circle">1</div>
            <h4>Connect Wallet</h4>
            <p>Link your crypto wallet to access the platform securely.</p>
          </div>
          <div class="step-card">
            <div class="step-circle">2</div>
            <h4>Browse Events</h4>
            <p>Discover NFT-verified events from concerts to conferences.</p>
          </div>
          <div class="step-card">
            <div class="step-circle">3</div>
            <h4>Mint Tickets</h4>
            <p>Purchase tickets minted as NFTs on the blockchain.</p>
          </div>
          <div class="step-card">
            <div class="step-circle">4</div>
            <h4>Verify &amp; Attend</h4>
            <p>Show your NFT ticket for instant verification at the event.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <h2>Why Blockchain for Event Ticketing?</h2>
        <p class="lead">
          Blockchain solves critical problems in the traditional ticketing industry.
        </p>
        <div class="benefits-grid">
          <div class="benefit">
            <h4>Eliminate Fraud</h4>
            <p>
              Every ticket is a unique NFT on the blockchain, making counterfeiting
              impossible.
            </p>
          </div>
          <div class="benefit">
            <h4>Transparent Ownership</h4>
            <p>See the full history of ticket ownership, transfers, and verification.</p>
          </div>
          <div class="benefit">
            <h4>Instant Transfers</h4>
            <p>Securely transfer tickets without third-party platforms or delays.</p>
          </div>
          <div class="benefit">
            <h4>Smart Contract Control</h4>
            <p>Set resale rules, revenue sharing, and access controls programmatically.</p>
          </div>
          <div class="benefit">
            <h4>Membership Benefits</h4>
            <p>
              NFT memberships unlock tiered benefits like early access, discounts,
              and VIP entry.
            </p>
          </div>
          <div class="benefit">
            <h4>Decentralized Trust</h4>
            <p>Rules are enforced transparently, creating trust between organizers and fans.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="section" style="background: #ffffff;">
      <div class="container">
        <h2>Impact on the Event Industry</h2>
        <p class="lead">
          Blockchain-powered ticketing delivers measurable improvements.
        </p>
        <div class="stats">
          <div class="stat">
            <strong>$15B+</strong>
            <p>Lost to ticket fraud annually.</p>
          </div>
          <div class="stat">
            <strong>40%</strong>
            <p>Reduction in transaction fees via smart contracts.</p>
          </div>
          <div class="stat">
            <strong>100%</strong>
            <p>Ticket authenticity guaranteed through on-chain verification.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="cta">
      <div class="container">
        <h2>Ready to Experience the Future?</h2>
        <p class="lead">
          Join ChainEvent and discover secure, transparent event ticketing powered by
          blockchain technology.
        </p>
        <div class="cta-actions">
          <a class="btn" href="/events">Browse Events</a>
          <a class="btn btn-light" href="/membership">View Memberships</a>
        </div>
      </div>
    </section>

    <%- include('partials/footer') %>

    <script>
      const walletButton = document.getElementById("walletButton");
      const STORAGE_KEY = "chainevent_wallet";
      let connectedAccount = null;

      const shortenAddress = (address) => {
        if (!address) return "";
        return `${address.slice(0, 6)}...${address.slice(-4)}`;
      };

      const setButtonState = () => {
        if (connectedAccount) {
          setWalletLabel(walletButton, `Disconnect ${shortenAddress(connectedAccount)}`);
        } else {
          setWalletLabel(walletButton, "Connect Wallet");
        }
      };

      const setWalletLabel = (button, label) => {
        if (!button) return;
        const labelEl = button.querySelector(".wallet-label");
        if (labelEl) {
          labelEl.textContent = label;
        } else {
          button.textContent = label;
        }
      };

      const connectWallet = async () => {
        if (!window.ethereum) {
          alert("MetaMask not detected. Please install MetaMask to continue.");
          return;
        }

        try {
          try {
            await window.ethereum.request({
              method: "wallet_requestPermissions",
              params: [{ eth_accounts: {} }],
            });
          } catch (permError) {
            if (permError && permError.code === 4001) {
              return;
            }
          }
          const accounts = await window.ethereum.request({
            method: "eth_requestAccounts",
          });
          connectedAccount = accounts[0] || null;
          if (connectedAccount) {
            localStorage.setItem(STORAGE_KEY, connectedAccount);
          } else {
            localStorage.removeItem(STORAGE_KEY);
          }
          setButtonState();
        } catch (error) {
          console.error("Wallet connection failed:", error);
        }
      };

      const disconnectWallet = () => {
        connectedAccount = null;
        localStorage.removeItem(STORAGE_KEY);
        setButtonState();
      };

      const syncWallet = async () => {
        if (!window.ethereum) return;
        try {
          const accounts = await window.ethereum.request({ method: "eth_accounts" });
          connectedAccount = accounts[0] || null;
          if (connectedAccount) {
            localStorage.setItem(STORAGE_KEY, connectedAccount);
          } else {
            localStorage.removeItem(STORAGE_KEY);
          }
          setButtonState();
        } catch (error) {
          console.error("Wallet sync failed:", error);
        }
      };

      walletButton.addEventListener("click", () => {
        if (connectedAccount) {
          disconnectWallet();
        } else {
          connectWallet();
        }
      });

      if (window.ethereum) {
        window.ethereum.on("accountsChanged", (accounts) => {
          connectedAccount = accounts[0] || null;
          if (connectedAccount) {
            localStorage.setItem(STORAGE_KEY, connectedAccount);
          } else {
            localStorage.removeItem(STORAGE_KEY);
          }
          setButtonState();
        });
      }

      connectedAccount = localStorage.getItem(STORAGE_KEY);
      setButtonState();
      syncWallet();
    </script>
  </body>
</html>
